// -*- mode: jsonc -*-
{
  "reload_style_on_change": true,
  "spacing": 0, // will set in style.css
  //
  // Modules
  //
  "modules-left": [
    "custom/menu",
    "mpris",
    "hyprland/submap"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
    "tray",
    "group/status",
    "clock"
  ],
  //
  // Grouped modules
  //
  "group/status": {
    "orientation": "inherit",
    "modules": [
      "cpu",
      "memory",
      "temperature",
      "pulseaudio",
      "bluetooth",
      "network",
      "battery"
    ]
  },
  //
  // Left modules
  //
  "custom/menu": {
    "format": "󰣇",
    "on-click": "~/.config/hypr/scripts/menu.sh waybar",
    "on-click-right": "~/.config/hypr/scripts/power.sh waybar",
    "tooltip": false
  },
  "mpris": {
    "format-paused": " {artist} - {title}",
    "format-playing": " {artist} - {title}",
    "interval": 0,
    "max-length": 45,
    "on-click": "playerctl play-pause",
    "on-click-middle": "playerctl previous",
    "on-click-right": "playerctl next",
    "on-scroll-down": "playerctl volume 0.1-",
    "on-scroll-up": "playerctl volume 0.1+",
    "tooltip": false
  },
  "hyprland/submap": {
    "on-click": "hyprctl dispatch submap reset",
    "tooltip": false
  },
  //
  // Center modules
  //
  "hyprland/workspaces": {
    "format": "{id}",
    "format-icons": {
      "1": "一",
      "2": "二",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "八",
      "9": "九",
      "10": "十"
    },
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "tooltip": false
  },
  //
  // Right modules
  //
  "tray": {
    "show-passive-items": true,
    "tooltip": false
  },
  "cpu": {
    "format": " {usage}%",
    "interval": 2,
    "states": {
      "high": 70,
      "critical": 90
    },
    "tooltip": false
  },
  "memory": {
    "format": " {}%",
    "interval": 2,
    "states": {
      "high": 80,
      "critical": 90
    },
    "tooltip-format": " {used:0.1f}G/{total:0.1f}G\n󰍛 {swapUsed:0.1f}G/{swapTotal:0.1f}G"
  },
  "temperature": {
    "interval": 2,
    "format": " {temperatureC}°C",
    "thermal-zone": 8,
    "critical-threshold": 90,
    "warning-threshold": 80
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-icons": {
      "default": [
        "",
        ""
      ]
    },
    "format-muted": " muted",
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click-right": "kitty -1 --class pulsemixer pulsemixer",
    "scroll-step": 5,
    "tooltip": false
  },
  "bluetooth": {
    "format": "",
    "format-connected": "",
    "format-disabled": "",
    "tooltip-format": "{controller_alias}: {controller_address}",
    "tooltip-format-connected": "{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t({device_address})"
  },
  "network": {
    "format-alt": "󰛳 {ifname}: {ipaddr}/{cidr}",
    "format-disconnected": "󰲛",
    "format-ethernet": "󰈀",
    "format-wifi": "",
    "on-click-right": "kitty -1 --class nmtui nmtui",
    "tooltip-format": "󰛳 {ifname} via {gwaddr}",
    "tooltip-format-ethernet": "󰈀 {ipaddr}/{cidr} 󰛳 {ifname} via {gwaddr}",
    "tooltip-format-wifi": " {essid} 󰛳 {ifname} via {gwaddr}"
  },
  "battery": {
    "format": "{icon}",
    "format-charging": "󱐋{icon}",
    "format-full": "",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ],
    "interval": 1,
    "max-length": 25,
    "states": {
      "critical": 15,
      "warning": 30,
      "normal": 78,
      "full": 100
    },
    "tooltip-format": " {capacity}% (<i>{timeTo}</i>)\n {health}% Health"
  },
  "clock": {
    "format": " {:%R}",
    "format-alt": "󰃭 {:%A, %B %d, %Y |  %H:%M:%S}",
    "interval": 1,
    "tooltip": false
  }
}
